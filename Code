Уровень A. Базовый (выбрал задание номер 13 из 17: кнопка, которая меняет размер окна)

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Erkebulan._210
{
   public partial class Form1 : Form
   {
      public Form1()
      {
         InitializeComponent();
      }

private void button1_Click(object sender, EventArgs e)
{
    if (this.Width == 800 && this.Height == 600)
    {
        this.Width = 1200;
        this.Height = 800;
    }
    else
    {
        this.Width = 800;
        this.Height = 600;
    }
}

