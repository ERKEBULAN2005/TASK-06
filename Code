      }

      private void      
      button1_Click(object sender,   
      EventArgs e)
      {
         int a = int.Parse
         (TextBox1.Text);
         int b = int.Parse
         (TextBox2.Text);
         int result = a + b;
         label1.Text = "Результат "    
         + result;
       }
       private void      
       button2_Click(object sender,   
       EventArgs e)
       {
         int a = int.Parse
         (TextBox1.Text);
         int b = int.Parse
         (TextBox2.Text);
         int result = a - b;
         label1.Text = "Результат "    
         + result;

