   public partial class Form1 : Form
   {
      public Form1()
      {
         InitializeComponent();
      }

      private void      
      button1_Click(object sender,   
      EventArgs e)
      {
         Random rnd = new Random();
         this.BackColor = 
      System.Drawing.Color.FromArgb(
              rnd.Next(256),
              rnd.Next(256),
              rnd.Next(256));
       }
    }
